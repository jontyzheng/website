<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="boot.no.dao.UserMapper">

    <!--注册-->
    <insert id="addUser" parameterType="user">
            INSERT INTO user(name, pwd)
            VALUES(#{name}, #{pwd})
    </insert>

    <!--完善信息-->

    <!--登录-->
    <select id="checkUser" parameterType="String" resultType="String">
            SELECT pwd FROM user
            WHERE name = #{name}
    </select>

    <!--展示信息-->
    <select id="showAbout" resultType="user">
        SELECT name, email, wechat_id, intro FROM user
        WHERE id = 1
    </select>

    <!--更新信息-->
    <update id="updateAbout" parameterType="user">
        UPDATE user
        SET name = #{name},
            email = #{email},
            pwd = #{email},
            intro = #{intro}
        WHERE 1=1
    </update>
</mapper>