<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="boot.no.dao.PostMapper">

    <insert id="addPost" parameterType="post">
            INSERT INTO post(tag, title, profile, body)
            VALUES (#{tag}, #{title}, #{profile}, #{body})
    </insert>

    <!--查询所有博客-->
    <select id="listPost" resultType="post">
            SELECT * from post
    </select>

    <!--按 tag 分类-->
    <select id="listByTag" resultType="post" parameterType="String">
            SELECT tag, profile, body, date FROM post
            WHERE tag = #{tag}
    </select>

    <!--按标题展示-->
    <select id="byTitle" resultType="post" parameterType="string">
            SELECT tag, title, profile, body FROM post
            WHERE title = #{title}
    </select>
</mapper>