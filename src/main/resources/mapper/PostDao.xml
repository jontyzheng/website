<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="boot.no.dao.PostMapper">

    <insert id="addPost" parameterType="post">
            INSERT INTO post(tag, title, profile, body, date)
            VALUES (#{tag}, #{title}, #{profile}, #{body}, #{date})
    </insert>

    <!--查询所有博客-->
    <select id="listPost" resultType="post">
            SELECT * from post
    </select>

    <!--按 tag 分类-->
    <select id="byTag" resultType="post" parameterType="String">
            SELECT tag, profile, body, date FROM post
            WHERE tag = #{tag}
    </select>

    <!--首页显示-->
    <select id="lastest" resultType="post">
            SELECT title, date, id
            From post
            Limit 10
    </select>

    <!--按标题展示-->
    <select id="byPostId" resultType="post" parameterType="long">
            SELECT * FROM post
            WHERE id = #{id}
    </select>
</mapper>